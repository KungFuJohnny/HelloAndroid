<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="contentDescription"
    android:background="@drawable/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:textSize="15sp"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="190dp"
        android:src="@drawable/peeking"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:id="@+id/imageView3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:src="@drawable/peeking2" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="148dp"
        app:srcCompat="@drawable/javalang"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="85dp"/>


    <TextView
        android:id="@+id/udacity_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:text="@string/companyName"
        android:textAllCaps="true"
        android:textColor="#2196F3"
        android:textSize="26sp">

    </TextView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/udacity"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/udacity_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/udacity"
        android:id="@+id/imageView4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slogan"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:fontFamily="Mohave"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/info_text"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/contactInfo"
        android:layout_marginTop="340dp"
        android:padding="5dp"
        android:textSize="15sp"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:padding="5dp"
        android:src="@drawable/udacity_v2"
        android:layout_marginTop="400dp"/>

</RelativeLayout>